set main-view = id:width=12 date author commit-title:graph=yes,refs=yes
set vertical-split = yes
set split-view-height = 80%
# 差分の前後の表示行数(diff-context)を指定
set diff-context = 6

set show-author = full
set show-refs = true
set show-rev-graph = true
set show-date = local
set show-line-numbers = yes
set line-number-interval = 10
set line-graphics = ascii
set show-file-size = units
set horizontal-scroll = 20%

bind main R !git rebase -i %(commit)
bind diff R !git rebase -i %(commit)
bind generic L !git reflog
